{% extends 'UtopiaBundle::base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                DÃ©tail Client
            </h1>

        </div>
    </div>
    <div class="container">
        <div class="notice notice-success">
            <strong>Identifiant </strong>{{ entity.id }}
        </div>
        <div class="notice notice-info">
            <strong>Nom</strong> {{ entity.nom }}
        </div>
        <div class="notice notice-warning">
            <strong>Logo </strong> <img  style="width: 50%; height: 250px; margin-left: 25% ;position: relative; z-index: 1;" src="{{ asset('uploads/img/' ~ entity.imageClient.url) }}"/>
             <button style="z-index: 1; margin-top: -480px; position: relative; margin-left: 75%;" class="btn btn-warning" type="button"  data-toggle="modal" data-target="#myModal">
                <em class="fa fa-pencil"></em>
            </button>
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Logo client</h4>
                        </div>
                        <div class="modal-body">
                            <div class="content">
                                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                                {{ form_errors(form) }}

                                <div class="form-group">

                                    {{ form_label(form.file, "File", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

                                    {{ form_errors(form.file) }}

                                    <div class="col-sm-6">


                                        <label class="btn btn-default btn-lg" style="width: 60% ; cursor: pointer">
                                            {{ form_widget(form.file, {'attr': {'class': 'inputFile','id':'my-file-selector','type':'file','style':'display:none;', "onchange":"$('#upload-file-info').html($(this).val());"}}) }}
                                        </label>
                                        <span class='label label-info' id="upload-file-info"></span>
                                    </div>
                                </div>

                                <div class="form-group">


                                    <div class="col-sm-9">
                                        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success pull-right'}}) }}

                                    </div>
                                </div>



                                {{ form_row(form._token) }}

                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
        {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}}) }}

    </div>


{% endblock %}
