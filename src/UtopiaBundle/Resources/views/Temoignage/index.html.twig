{% extends 'UtopiaBundle::base.html.twig' %}


{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Liste des Témoignages
            </h1>

        </div>
    </div>
    <div class="row">

        <div class="col-md-6 col-md-offset-3">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title"></h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a href="{{ path('temoignage_new') }}" class="btn btn-sm btn-success btn-create">
                                Créer
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>Id </th>
                            <th>Client</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.client.nom }}</td>
                                <td>{{ entity.description }} </td>
                                <td>
                                    <a class="btn btn-info pull-right" href="{{ path('temoignage_show', { 'id': entity.id }) }}"><em class="fa fa-plus"></em>  </a>
                                    <a class="btn btn-warning pull-right" href="{{ path('temoignage_edit', { 'id': entity.id }) }}"><em class="fa fa-pencil"></em></a>
                                </td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>

                </div>

            </div>

        </div>
    </div>

{% endblock %}


