{% extends 'UtopiaBundle::base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
               Créer un métier
            </h1>

        </div>
    </div>

    <div class="content">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}

        <div class="form-group">

            {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.nom) }}

            <div class="col-sm-6">

                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">


            <div class="col-sm-9">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-success pull-right'}}) }}

            </div>
        </div>



        {{ form_row(form._token) }}

    </div>


{% endblock %}
